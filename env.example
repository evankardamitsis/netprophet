# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OneSignal (Mobile Push Notifications)
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# Vercel (Web Deployment)
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id

# Cron Jobs
CRON_SECRET=your_cron_secret_here

# Expo (Mobile Deployment)
EXPO_TOKEN=your_expo_token

# Email Configuration (Production)
RESEND_API_KEY=your_resend_api_key_here


# Stripe Payment Processing
# Base keys (used as fallback; test keys for dev, live for prod when _LIVE/_TEST unset)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Live keys (production). REQUIRED for production - the client must use pk_live_* when the
# server creates live Checkout Sessions. Used when NODE_ENV=production OR NEXT_PUBLIC_STRIPE_USE_LIVE=true.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_publishable_key
STRIPE_SECRET_KEY_LIVE=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET_LIVE=whsec_your_live_webhook_secret

# Test keys (development). Used when NODE_ENV=development and USE_LIVE not set.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_publishable_key
STRIPE_SECRET_KEY_TEST=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET_TEST=whsec_your_test_webhook_secret

# Force live Stripe keys (e.g. production deploy). When true, quick buy / checkout use live env.
# NEXT_PUBLIC_STRIPE_USE_LIVE=true

# Development
NODE_ENV=development 