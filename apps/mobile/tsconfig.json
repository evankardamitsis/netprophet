{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-native",
        "types": [
            "react",
            "react-native"
        ]
    },
    "include": [
        "app/**/*",
        "src/**/*",
        "index.ts",
        "index.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}