#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting
echo "ğŸ“ Running linting..."
pnpm lint
if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the issues before committing."
    exit 1
fi

# Run type checking
echo "ğŸ” Running type checking..."
pnpm type-check
if [ $? -ne 0 ]; then
    echo "âŒ Type checking failed. Please fix the issues before committing."
    exit 1
fi

# Run builds for critical packages to catch deployment errors
echo "ğŸ—ï¸  Running builds for critical packages..."
# Force fresh builds by clearing cache first
echo "ğŸ§¹ Clearing build cache for fresh builds..."
rm -rf packages/lib/dist
rm -rf apps/web/.next
rm -rf apps/admin/.next

pnpm build --filter=@netprophet/lib
if [ $? -ne 0 ]; then
    echo "âŒ Lib package build failed. Please fix the issues before committing."
    exit 1
fi

pnpm build --filter=@netprophet/web
if [ $? -ne 0 ]; then
    echo "âŒ Web app build failed. Please fix the issues before committing."
    exit 1
fi

pnpm build --filter=@netprophet/admin
if [ $? -ne 0 ]; then
    echo "âŒ Admin app build failed. Please fix the issues before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
echo "ğŸš€ Ready to commit and deploy!" 